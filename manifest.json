{
  "name": "megablock",
  "description": "Block everyone who likes a particular tweet, as a web extension.",
  "version": "0.0.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage"
  ],
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*"
      ],
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "https://*.twitter.com/*/likes"
      ],
      "js": [
        "common.js",
        "likes.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
